<% if @folder.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @folder.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="jumbotron">
  <h1 class="display-4">フォルダ名を決めよう！</h1>
  <p  class="lead">テーマに合わせたフォルダ名をつける。</p>
    <%= form_with model:@folder,local:true,class: "form-inline" do |f| %>
      <%= f.text_field :title,placeholder: "フォルダ名を入力",class: "form-control w-75" %>
      <%= f.submit "投稿",class: "btn btn-primary submit-btn" %>
    <% end %>
</div>